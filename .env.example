# GAIA Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# ===========================================
# LLM API KEYS (At least one required)
# ===========================================

# Google Gemini (Primary - Recommended)
# Get key at: https://ai.google.dev/
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_PRO_MODEL=gemini-1.5-pro

# OpenAI (Fallback)
# Get key at: https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude (Fallback)
# Get key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===========================================
# EXTERNAL DATA APIs
# ===========================================

# NewsAPI (Required for news sentiment)
# Get key at: https://newsapi.org/register
NEWS_API_KEY=your_newsapi_key_here

# Alpha Vantage (Required for financial data)
# Get key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alphavantage_key_here

# SEC EDGAR (No key required, just User-Agent)
SEC_EDGAR_USER_AGENT=GAIA-Project contact@example.com

# ===========================================
# STAGE 2 APIs (Optional)
# ===========================================

# NASA Earthdata (Satellite imagery)
NASA_EARTHDATA_API_KEY=your_nasa_api_key_here

# ESA Copernicus (Environmental data)
ESA_COPERNICUS_API_KEY=your_esa_api_key_here

# AWS Configuration (For Amazon Bedrock)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# ===========================================
# DATABASE & CACHE
# ===========================================
DATABASE_URL=sqlite:///./gaia.db
REDIS_URL=redis://localhost:6379

# ===========================================
# BLOCKCHAIN CONFIGURATION
# ===========================================
BLOCKCHAIN_ENABLED=true
BLOCKCHAIN_NETWORK=testnet

# ===========================================
# AGENT CONFIGURATION
# ===========================================
AGENT_TIMEOUT_SECONDS=60
MAX_CONCURRENT_AGENTS=10
ADVERSARIAL_DEBATE_ROUNDS=3

# LLM Settings
GEMINI_CACHE_TTL=3600
GEMINI_MAX_RETRIES=3
GEMINI_RETRY_DELAY=1

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
