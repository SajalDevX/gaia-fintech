# GAIA Environment Configuration
# Copy this file to .env and fill in your values

# Application
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Database
DATABASE_URL=sqlite:///./gaia.db
REDIS_URL=redis://localhost:6379

# AI/ML API Keys (Optional - for enhanced functionality)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# AWS Configuration (Optional - for Amazon Bedrock)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# External Data APIs (Optional)
NASA_EARTHDATA_API_KEY=your_nasa_api_key_here
ESA_COPERNICUS_API_KEY=your_esa_api_key_here

# Blockchain Configuration
BLOCKCHAIN_ENABLED=true
BLOCKCHAIN_NETWORK=testnet

# Agent Configuration
AGENT_TIMEOUT_SECONDS=60
MAX_CONCURRENT_AGENTS=10
ADVERSARIAL_DEBATE_ROUNDS=3

# Frontend
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
