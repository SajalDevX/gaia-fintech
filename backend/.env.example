# GAIA Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME="GAIA - Global AI-powered Impact Assessment"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT="development"

# API Configuration
API_HOST="0.0.0.0"
API_PORT=8000
API_PREFIX="/api/v1"
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# AI/ML API Keys
OPENAI_API_KEY="your-openai-api-key-here"
ANTHROPIC_API_KEY="your-anthropic-api-key-here"

# AWS Configuration (for Bedrock, S3, etc.)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"

# Database
DATABASE_URL="sqlite:///./gaia.db"
# DATABASE_URL="postgresql://user:password@localhost:5432/gaia"

# Redis (for caching and WebSocket support)
REDIS_URL="redis://localhost:6379"

# External APIs (Satellite Data)
NASA_EARTHDATA_API_KEY="your-nasa-api-key"
ESA_COPERNICUS_API_KEY="your-esa-api-key"

# Blockchain Configuration
BLOCKCHAIN_ENABLED=True
BLOCKCHAIN_NETWORK="testnet"

# Agent Configuration
AGENT_TIMEOUT_SECONDS=60
MAX_CONCURRENT_AGENTS=10
ADVERSARIAL_DEBATE_ROUNDS=3

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
